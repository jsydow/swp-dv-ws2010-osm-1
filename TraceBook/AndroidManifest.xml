<?xml version="1.0" encoding="utf-8"?>
<manifest package="Trace.Book" android:versionCode="1"
	android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
	<uses-permission android:name="android.permission.CAMERA"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

	<application android:label="@string/app_name"
		android:icon="@drawable/ic_launcher_tracebook">
		<activity android:name="tracebook.gui.activity.StartActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="tracebook.gui.activity.NewTrackActivity"
			android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="tracebook.gui.activity.LoadTrackActivity"></activity>
		<activity android:name="tracebook.gui.activity.AddPointActivity"
			android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="tracebook.gui.activity.PreferencesActivity"></activity>
		<service android:name="tracebook.core.logger.WaypointLogService" />
		<activity android:name="tracebook.gui.activity.MapsForgeActivity"></activity>
		<activity android:name="tracebook.gui.activity.AddPointMetaActivity"></activity>
		<activity android:name="tracebook.gui.activity.AddMemoActivity"></activity>
		<activity android:name="tracebook.gui.activity.RecordVideoActivity"></activity>
		<activity android:name="tracebook.gui.activity.AboutActivity"></activity>
		<activity android:name="tracebook.gui.activity.FullTextSearchActivity"></activity>
		<activity android:name="tracebook.gui.view.HelpWebView"></activity>
	</application>
</manifest>
