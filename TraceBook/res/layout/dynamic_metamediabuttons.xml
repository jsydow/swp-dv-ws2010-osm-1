<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal">

	<Button android:id="@+id/btn_addMetaMedia_makePicture" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:drawableTop="@drawable/photo_icon_normal"
		android:text="@string/btn_addMetaMedia_makePicture" android:onClick="makePictureBtn" />


	<Button android:id="@+id/btn_addMetaMedia_makeVideo" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:drawableTop="@drawable/video_icon_normal"
		android:text="@string/btn_addMetaMedia_makeVideo" android:onClick="makeVideoBtn" />


	<Button android:id="@+id/btn_addMetaMedia_makeMemo" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:drawableTop="@drawable/memo_icon_normal"
		android:onClick="makeMemoBtn" android:text="@string/btn_addMetaMedia_makeMemo" />


	<Button android:id="@+id/btn_addMetaMedia_makeNotice" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:drawableTop="@drawable/notice_icon_normal"
		android:onClick="makeNoticeBtn" android:text="@string/btn_addMetaMedia_makeNotice" />

</LinearLayout>
