<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">
  
  	<!-- Back button -->
	<Button 
		android:text="@string/trackInfoDialog_backbtn" 
		android:id="@+id/trackInfoDialog_backbtn" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:onClick="backBtn"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"></Button>
  
  	<ScrollView 
  		android:id="@+id/trackInfoDialog_scrollview" 
  		android:layout_width="fill_parent" 
  		android:layout_height="fill_parent"
  		android:layout_above="@id/trackInfoDialog_backbtn">
  		
  		<LinearLayout
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent" 
  			android:orientation="vertical">
  	
		  	<!-- Track name -->
			<TextView 
				android:text="@string/trackInfoDialog_name" 
				android:id="@+id/trackInfoDialog_name_text" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			<TextView 
				android:text="name" 
				android:id="@+id/trackInfoDialog_name" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scaleType="fitCenter"
				android:layout_weight="1" />
			
			<!-- Comment  -->
			<TextView 
				android:text="@string/trackInfoDialog_comment" 
				android:id="@+id/trackInfoDialog_comment_text" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			<TextView 
				android:text="comment" 
				android:id="@+id/trackInfoDialog_comment" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scaleType="fitCenter"
				android:layout_weight="1" />
			
			<!-- Time stamp -->
			<TextView 
				android:text="@string/trackInfoDialog_timestamp" 
				android:id="@+id/trackInfoDialog_timestamp_text" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			<TextView 
				android:text="timestamp" 
				android:id="@+id/trackInfoDialog_timestamp" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scaleType="fitCenter"
				android:layout_weight="1" />
			
			<!-- Number of POIs -->
			<TextView 
				android:text="@string/trackInfoDialog_pois" 
				android:id="@+id/trackInfoDialog_pois_text" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			<TextView 
				android:text="pois" 
				android:id="@+id/trackInfoDialog_pois" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scaleType="fitCenter"
				android:layout_weight="1" />
			
			<!-- Number of Ways -->
			<TextView 
				android:text="@string/trackInfoDialog_ways" 
				android:id="@+id/trackInfoDialog_ways_text" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			<TextView 
				android:text="ways" 
				android:id="@+id/trackInfoDialog_ways" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scaleType="fitCenter"
				android:layout_weight="1" />
			
			<!-- Number of media -->
			<TextView 
				android:text="@string/trackInfoDialog_media" 
				android:id="@+id/trackInfoDialog_media_text" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
			<TextView 
				android:text="media" 
				android:id="@+id/trackInfoDialog_media" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"></TextView>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scaleType="fitCenter"
				android:layout_weight="1" />
		</LinearLayout>
	</ScrollView>
	
	


</RelativeLayout>