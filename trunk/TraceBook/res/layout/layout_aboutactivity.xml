<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:gravity="center_horizontal">
  	
  	<TextView android:id="@+id/tv_aboutActivity_appName"
  	android:text="@string/app_name"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textSize="22sp"
  	android:textStyle="bold"/>
  
 	<TextView android:id="@+id/tv_aboutActivity_versionTitle"
  	android:text="@string/tv_aboutActivity_versionTitle"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textSize="17sp"/>
  
  	<TextView android:id="@+id/tv_aboutActivity_version"
  	android:text="@string/tv_aboutActivity_version"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textSize="11sp"/>  
  
  	<TextView android:id="@+id/tv_aboutActivity_licenseTitle"
  	android:text="@string/tv_aboutActivity_licenseTitle"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textSize="17sp"/>
  
    <TextView android:id="@+id/tv_aboutActivity_license"
  	android:text="@string/tv_aboutActivity_license"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textSize="11sp"/>
  
  	<Button android:id="@+id/btn_aboutActivity_license"
  	android:text="@string/btn_aboutActivity_license"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:background="@android:color/transparent"
  	android:textColor="#FF0000"
  	android:textSize="11sp"
  	android:onClick="licenseBtn"/>
  
 	<TextView android:id="@+id/tv_aboutActivity_creditsTitle"
  	android:text="@string/tv_aboutActivity_creditsTitle"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textSize="15sp"/>
  	
  	<TextView android:id="@+id/tv_aboutActivity_creditsTeam"
  	android:text="@string/tv_aboutActivity_creditsTeam"
  	android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
  	android:textSize="10sp"/>
   
   
</LinearLayout>
